{
  "sdct-at-lambda-basic-execution-policy": {
    "policy_content": {
      "Statement": [
        {
          "Action": [
            "logs:CreateLogGroup",
            "logs:CreateLogStream",
            "logs:PutLogEvents",
            "dynamodb:GetItem",
            "dynamodb:Query",
            "dynamodb:PutItem",
            "dynamodb:Batch*",
            "dynamodb:DeleteItem",
            "ssm:PutParameter",
            "ssm:GetParameter",
            "kms:Decrypt",
            "dynamodb:GetRecords",
            "dynamodb:GetShardIterator",
            "dynamodb:DescribeStream",
            "dynamodb:ListStreams",
            "sts:AssumeRole"
          ],
          "Effect": "Allow",
          "Resource": "*"
        }
      ],
      "Version": "2012-10-17"
    },
    "resource_type": "iam_policy",
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test",
      "project-level-tag": "set-from-resource"
    }
  },
  "sdct-at-dynamic-aliases-role": {
    "resource_type": "iam_role",
    "predefined_policies": [
      "AWSLambdaSQSQueueExecutionRole"
    ],
    "trusted_relationships": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Effect": "Allow",
          "Principal": {
            "Service": "apigateway.amazonaws.com"
          },
          "Action": "sts:AssumeRole",
          "Condition": {
            "StringEquals": {
              "aws:SourceArn": "#{sdct-at-api-gw}"
            }
          }
        }
      ]
    },
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  },
  "sdct-at-java-lambda-role": {
    "predefined_policies": [],
    "principal_service": "lambda",
    "custom_policies": [
      "sdct-at-lambda-basic-execution-policy"
    ],
    "resource_type": "iam_role",
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  },
  "sdct-at-appsync-role": {
    "predefined_policies": [],
    "principal_service": "appsync",
    "custom_policies": [
      "sdct-at-lambda-basic-execution-policy"
    ],
    "resource_type": "iam_role",
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  },
  "sdct-at-api-gw": {
    "resource_type": "api_gateway",
    "deploy_stage": "api",
    "dependencies": [],
    "authorizers": {
      "authorizer": {
        "type": "COGNITO_USER_POOLS",
        "identity_source": "method.request.header.Authorization",
        "user_pools": [
          "${booking_userpool}"
        ],
        "ttl": 300
      }
    },
    "resources": {
      "/test": {
        "enable_cors": true,
        "POST": {
          "enable_proxy": true,
          "authorization_type": "authorizer",
          "integration_type": "lambda",
          "lambda_name": "sdct-at-nodejs-lambda",
          "api_key_required": false,
          "method_request_parameters": {},
          "integration_request_body_template": {},
          "responses": [],
          "integration_responses": [],
          "default_error_pattern": true
        },
        "GET": {
          "enable_proxy": true,
          "authorization_type": "authorizer",
          "integration_type": "lambda",
          "lambda_name": "sdct-at-nodejs-lambda",
          "api_key_required": false,
          "method_request_parameters": {},
          "integration_request_body_template": {},
          "responses": [],
          "integration_responses": [],
          "default_error_pattern": true
        }
      }
    },
    "apply_changes": [
      {
        "apply_type": "iam_role",
        "dependency_name": "sdct-at-dynamic-aliases-role",
        "trusted_relationships": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "apigateway.amazonaws.com"
              },
              "Action": "sts:AssumeRole",
              "Condition": {
                "StringEquals": {
                  "aws:SourceArn": "#{sdct-at-api-gw}"
                }
              }
            }
          ]
        }
      }
    ],
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  },
  "${booking_userpool}": {
    "resource_type": "cognito_idp",
    "password_policy": {
      "minimum_length": 12,
      "require_uppercase": true,
      "require_symbols": true,
      "require_lowercase": true,
      "require_numbers": true
    },
    "auto_verified_attributes": [],
    "sms_configuration": {},
    "username_attributes": [],
    "custom_attributes": [
      {
        "name": "lastName",
        "type": "String"
      },
      {
        "name": "firstName",
        "type": "String"
      }
    ],
    "client": {
      "client_name": "client-app",
      "generate_secret": false,
      "explicit_auth_flows": [
        "ALLOW_ADMIN_USER_PASSWORD_AUTH",
        "ALLOW_CUSTOM_AUTH",
        "ALLOW_USER_SRP_AUTH",
        "ALLOW_REFRESH_TOKEN_AUTH"
      ]
    },
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  },
  "sdct-at-queue": {
    "resource_type": "sqs_queue",
    "fifo_queue": false,
    "region": "${region}",
    "visibility_timeout": 150,
    "delay_seconds": 0,
    "maximum_message_size": 1024,
    "message_retention_period": 60,
    "receive_message_wait_time_seconds": 0,
    "policy": {},
    "redrive_policy": {},
    "content_based_deduplication": false,
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  },
  "sdct-at-topic": {
    "resource_type": "sns_topic",
    "region": "${region}",
    "event_sources": [],
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  },
  "sdct-at-table": {
    "resource_type": "dynamodb_table",
    "hash_key_name": "id",
    "hash_key_type": "N",
    "billing-mode": "PAY_PER_REQUEST",
    "read_capacity": 1,
    "write_capacity": 1,
    "global_indexes": [
      {
        "name": "number-index",
        "index_key_name": "number",
        "index_key_type": "N"
      }
    ],
    "autoscaling": [],
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  },
  "sdct-at-reservation": {
    "resource_type": "dynamodb_table",
    "hash_key_name": "id",
    "hash_key_type": "N",
    "billing-mode": "PROVISIONED",
    "read_capacity": 2,
    "write_capacity": 1,
    "autoscaling": [],
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  },
  "sdct-at-cw-rule": {
    "resource_type": "cloudwatch_rule",
    "rule_type": "schedule",
    "expression": "rate(1 minute)",
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  },
  "sdct-at-s3-bucket": {
    "resource_type": "s3_bucket",
    "cors": [],
    "policy": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Sid": "PublicReadGetObject",
          "Effect": "Allow",
          "Principal": "*",
          "Action": [
            "s3:GetObject"
          ],
          "Resource": [
            "arn:aws:s3:::sdct-at-s3-bucket/*"
          ],
          "Condition": {
            "IpAddress": {
              "aws:SourceIp": [
                "10.10.10.10/32"
              ]
            }
          }
        }
      ]
    },
    "website_hosting": {
      "enabled": true,
      "index_document": "index.html",
      "error_document": "error.html"
    },
    "tags": {
      "tests": "smoke",
      "project": "sdct-auto-test"
    }
  }
}